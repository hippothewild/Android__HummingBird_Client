<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:orientation="horizontal">
	<LinearLayout
	    android:layout_height="match_parent"
	    android:layout_width="0dp"
	    android:layout_weight="7"
	    android:gravity="center_vertical"
	    android:orientation="vertical">
		<TextView
		    android:id="@+id/article_title"
		    android:lines="2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
		    android:text="AOA, 제주도 비밀 휴가 엿보니..여름 만끽 '좋아요~'"
		    android:paddingTop="5dp"
		    android:textColor="@color/ashgray"
		    android:textSize="15sp"
		    android:textStyle="bold"/>
		<TextView
		    android:id="@+id/article_time"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
		    android:paddingTop="3dp"
		    android:text="이데일리 [연예], 2014.07.21 오후 2:08"
		    android:textColor="@color/ashgray"
		    android:textSize="10sp" />
		<TextView
		    android:id="@+id/article_content"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="AOA 걸그룹 AOA의 제주바다 비밀휴가 현장이 공개됐다. 21일 AOA 공식 유튜브와 페이스북, 라인 등 SNS 계정에는 24일 발매 예정인 AOA 첫 번째 화보집 ‘핫서머(Hot Summer)’의 메이킹 티저 영상이 업로드 되었다. 영상 속 AOA 멤버들은 시원하게 펼쳐진 제주 바다를 배경으로 여름을..."
		    android:paddingTop="10dp"
		    android:paddingRight="8dp"
		    android:textColor="@color/ashgray"
		    android:textSize="12sp"/>
	</LinearLayout>

	<TextView
	    android:id="@+id/article_btn_remove"
	    style="@style/ButtonTheme"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="2"
	    android:gravity="center_vertical|center_horizontal"
	    android:text="X"
	    android:textSize="25sp"
	    android:visibility="gone" />	
</LinearLayout>
